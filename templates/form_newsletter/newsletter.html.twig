{#\projetSynf\templates\form_newsletter\newsletter.html.twig#}
{% extends 'base.html.twig' %}

{% block title %}Abdo en acier{% endblock %}
{% block menu %}
    {% import 'macro/macroMenu.html.twig' as macroMenu %}

    {{ macroMenu.menu('Abdo en acier',7) }}

{% endblock %}
{% block body %}
    {% block headerUser %}
        {% import 'macro/macroHeader.html.twig' as headerUser %}
        {{ headerUser.headerUser('test',1) }}
    {% endblock %}
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-xl-5 mx-auto mt-5 mb-5">
            <h1>Inscription newsletter</h1>
                {% block formulaire %}
                    {{ form_start(form) }}
                            {{ form_label(form.mail) }} {{ form_widget (form.mail) }}
                            {{ form_label(form.nom) }} {{ form_widget (form.nom) }}
                            <input type="submit" name="action" class="btn btn-primary mt-3" value="Créer">
                            <input type="submit" name="action" class="btn btn-danger mt-3 ml-2" value="Désinscription">

                    {{ form_end(form) }}

                {% endblock %}
                {% if message is defined %}
                    {{ message }}
                {% endif %}
        </div>
    </div>
</div>
{% endblock %}
