{% extends 'base.html.twig' %}

{% block title %}Machine index{% endblock %}
{% block menu %}
    {% import 'macro/macroMenu.html.twig' as macroMenu %}

    {{ macroMenu.menu('Abdo en acier',10) }}

{% endblock %}

{% block body %}
    {% block headerUser %}
        {% import 'macro/macroHeader.html.twig' as headerUser %}
        {{ headerUser.headerUser('test',1) }}
    {% endblock %}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xl-10 mx-auto mt-5 mb-5">
            <h1>Les machines</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Intitulé</th>
                        <th>Unité de durée</th>
                        <th>Unité d'intensité</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for machine in machines %}
                    <tr>
                        <td><img src="{{ machine.logo }}" width="80px;" alt="{{ machine.logo}}"</td>
                        <td>{{ machine.nom }}</td>
                        <td>{{ machine.uniteDuree }}</td>
                        <td>{{ machine.uniteIntensite }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('machine_show', {'id': machine.id}) }}" role="button">Voir</a>
                            <a class="btn btn-primary" href="{{ path('machine_edit', {'id': machine.id}) }}" role="button">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('machine_new') }}" role="button">Nouvelle</a>
        </div>
    </div>
</div>

{% endblock %}
