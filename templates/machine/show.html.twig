{% extends 'base.html.twig' %}

{% block title %}Machine{% endblock %}
{% block menu %}
    {% import 'macro/macroMenu.html.twig' as macroMenu %}

    {{ macroMenu.menu('Abdo en acier',10) }}

{% endblock %}

{% block body %}
    {% block headerUser %}
        {% import 'macro/macroHeader.html.twig' as headerUser %}
        {{ headerUser.headerUser('test',1) }}
    {% endblock %}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xl-10 mx-auto mt-5 mb-5">
            <h1>Machine</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ machine.id }}</td>
                    </tr>
                    <tr>
                        <th>Illustration</th>
                        <td><img src="{{ machine.logo }}" width="300px" alt="{{ machine.logo }}"/></td>
                    </tr>
                    <tr>
                        <th>Désignation</th>
                        <td>{{ machine.nom }}</td>
                    </tr>
                    <tr>
                        <th>Unité de durée </th>
                        <td>{{ machine.uniteDuree }}</td>
                    </tr>
                    <tr>
                        <th>Unité d'intensité</th>
                        <td>{{ machine.uniteIntensite }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('machine_index') }}" role="button">Retour</a>

            <a class="btn btn-primary" href="{{ path('machine_edit', {'id': machine.id}) }}" role="button">Modifier</a>

            {{ include('machine/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
