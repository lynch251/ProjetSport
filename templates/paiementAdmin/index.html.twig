{% extends 'base.html.twig' %}

{% block title %}Paiement index{% endblock %}

 {% block menu %}

     {% import 'macro/macroMenu.html.twig' as macroMenu %}
     {{ macroMenu.menu('Abdo en acier', 9) }}

 {% endblock %}

{% block body %}
    {% block headerUser %}
        {% import 'macro/macroHeader.html.twig' as headerUser %}
        {{ headerUser.headerUser('test',1) }}
    {% endblock %}
    <h1>Paiements </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Abonnement associé</th>
                <th>DatePaiement</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paiement in paiements %}
            <tr>
                <td>{{ paiement.id }}</td>
                <td>{{ paiement.abonnement.nomSignificatif }}</td>
                <td>{{ paiement.datePaiement ? paiement.datePaiement|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ paiement.montant }}</td>
                <td>
                    <a href="{{ path('paiementAdmin_show', {'id': paiement.id}) }}">show</a>
                    <a href="{{ path('paiementAdmin_edit', {'id': paiement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('paiementAdmin_new') }}">Créer un nouveau</a>
{% endblock %}
