{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}
{% block menu %}
    {% import 'macro/macroMenu.html.twig' as macroMenu %}

    {{ macroMenu.menu('Abdo en acier',10) }}

{% endblock %}

{% block body %}
    {% block headerUser %}
        {% import 'macro/macroHeader.html.twig' as headerUser %}
        {{ headerUser.headerUser('test',1) }}
    {% endblock %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xl-10 mx-auto mt-5 mb-5">
            <h1>Utilisateurs</h1>

            <table class="table table-hover table-sm table-responsive overflow-hidden">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Login</th>
                        <th scope="col">NomUtilisateur</th>
                        <th scope="col">PrenomUtilisateur</th>
                        <th scope="col">Email</th>

                        <th scope="col">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td>{{ utilisateur.id }}</td>
                        <td>{{ utilisateur.login }}</td>
                        <td>{{ utilisateur.nomUtilisateur }}</td>
                        <td>{{ utilisateur.prenomUtilisateur }}</td>
                        <td>{{ utilisateur.email }}</td>
                        <td>{{ utilisateur.password|slice(0,5) }}</td>
                        <td>
                            <a href="{{ path('utilisateur_show', {'id': utilisateur.id}) }}">show</a>
                            <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary" href="{{ path('utilisateur_new') }}" role="button">Cr√©er un nouvel utilisateur</a>
        </div>
    </div>
</div>

{% endblock %}
